    </div>
    <div class="footer-basic" style="margin:14px;padding-bottom:20px;">
        <footer>
            <ul class="list-inline">
                <li class="list-inline-item"><a href="/">Home</a></li>
                <li class="list-inline-item"><a href="/login">Login</a></li>
                <li class="list-inline-item"><a href="#">FAQ</a></li>
                <li class="list-inline-item"><a href="#">About</a></li>
                <li class="list-inline-item"><a href="#">Privacy Policy</a></li>
            </ul>
            <p class="copyright">Mediochat © 2020</p>
        </footer>
    </div>
    <div class="modal fade" id="detailsModal" role="dialog" tabindex="-1">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Enter your details</h4><button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button></div>
                <form class="form-inline" action="/join-call" method="post" style="padding-bottom:4px;">
                    <div class="modal-body">
                        <div class="form-group" style="padding-bottom:10px;"><label style="padding-right:27px;">First Name</label>
                            <input class="form-control" type="text" name="name" placeholder="Your Name" required>
                        </div>
                        <div class="form-group" style="padding-bottom:10px;"><label style="padding-right:42px;">Surname</label>
                            <input class="form-control" type="text" name="surname" placeholder="Your Surname" required>
                        </div>
                        <div class="form-group" style="padding-bottom:10px;"><label style="padding-right:14px;">Date of birth</label>
                            <input class="form-control" type="date" name="dob" placeholder="Your DOB" required>
                        </div>
                        <input type="hidden" id="codeHidden" name="code">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary" type="submit">Call</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.0/js/bootstrap.bundle.min.js"></script>

    <script>
        $("#accessCodeForm").on("submit", (event) => {
            event.preventDefault(); 
            const code = event.target.code.value;
            // do basic frontend code validation:
            // ie: code is a number, remove whitespace if present...
            if (code == '' || code.replace(/\s/g,'') == '') {
                return;
            }
            $('#detailsModal').modal('show');
            $("#codeHidden").val(code);
        });
    </script>
</body>

</html>